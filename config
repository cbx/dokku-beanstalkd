#!/usr/bin/env bash
export BEANSTALKD_IMAGE=${BEANSTALKD_IMAGE:="freefoote/beanstalkd"}
export BEANSTALKD_IMAGE_VERSION=${BEANSTALKD_IMAGE_VERSION:="1.9"}
export BEANSTALKD_ROOT=${BEANSTALKD_ROOT:="/var/lib/dokku/services/beanstalkd"}

export PLUGIN_COMMAND_PREFIX="beanstalkd"
export PLUGIN_DATA_ROOT=$BEANSTALKD_ROOT
export PLUGIN_DATASTORE_PORTS=(11300)
export PLUGIN_DEFAULT_ALIAS="BEANSTALKD"
export PLUGIN_IMAGE=$BEANSTALKD_IMAGE
export PLUGIN_IMAGE_VERSION=$BEANSTALKD_IMAGE_VERSION
export PLUGIN_SCHEME="beanstalkd"
export PLUGIN_SERVICE="Beanstalkd"
